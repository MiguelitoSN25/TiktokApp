               VerticalOptions="Center"
               FontSize="23"
               FontAttributes="Bold"
                />

                <BoxView BackgroundColor="#F52E50"
                     HeightRequest="12"
                     WidthRequest="12"
                     CornerRadius="6"
                     VerticalOptions="Start"
                />

                

                <Label Text="Para ti"
